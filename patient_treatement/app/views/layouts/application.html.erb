<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title><%= content_for(:title) || "Patient Treatement" %></title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="assets/img/favicon.png" rel="icon">
  <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.gstatic.com" rel="preconnect">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <%= stylesheet_link_tag 'vendor/bootstrap/css/bootstrap.min', media: 'all' %> 
  <%= stylesheet_link_tag 'vendor/bootstrap-icons/bootstrap-icons', media: 'all' %> 
  <%= stylesheet_link_tag 'vendor/boxicons/css/boxicons.min', media: 'all' %> 
  <%= stylesheet_link_tag 'vendor/quill/quill.snow', media: 'all' %> 
  <%= stylesheet_link_tag 'vendor/quill/quill.bubble', media: 'all' %> 
  <%= stylesheet_link_tag 'vendor/remixicon/remixicon', media: 'all' %> 
  <%= stylesheet_link_tag 'vendor/simple-datatables/style', media: 'all' %> 
  
  <%= stylesheet_link_tag 'css/style', media: 'all' %> 

</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
      <a href="index.html" class="logo d-flex align-items-center">
        <img src="assets/img/logo.png" alt="">
        <span class="d-none d-lg-block">Traitement Patient</span>
      </a>
      <i class="bi bi-list toggle-sidebar-btn"></i>
    </div><!-- End Logo -->


    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">

        <li class="nav-item dropdown pe-3">

          <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
            <img src="assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
            <span class="d-none d-md-block dropdown-toggle ps-2">K. Anderson</span>
          </a><!-- End Profile Iamge Icon -->

          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
            <li class="dropdown-header">
              <h6>Kevin Anderson</h6>
              <span>Web Designer</span>
            </li>

            <li>
              <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                <i class="bi bi-person"></i>
                <span>My Profile</span>
              </a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            

            

            <li>
              <a class="dropdown-item d-flex align-items-center" href="#">
                <i class="bi bi-box-arrow-right"></i>
                <span>Sign Out</span>
              </a>
            </li>

          </ul><!-- End Profile Dropdown Items -->
        </li><!-- End Profile Nav -->

      </ul>
    </nav><!-- End Icons Navigation -->

  </header><!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">

    <ul class="sidebar-nav" id="sidebar-nav">

      <li class="nav-item">
        <a class="nav-link " href="/">
          <i class="bi bi-grid"></i>
          <span>Cat√©gorie</span>
        </a>
      </li><!-- End Dashboard Nav -->

      <li class="nav-item">
        <%= link_to traitements_path, class: "nav-link" do %>
          <i class="bi bi-grid"></i>
          <span>Traitements</span>
        <% end %>
        
      </li><!-- End Dashboard Nav -->
    </ul>

  </aside><!-- End Sidebar-->

  <main id="main" class="main">
    <%= yield %>
  </main>



  <!-- Vendor JS Files -->

  <%= javascript_include_tag 'vendor/apexcharts/apexcharts.min', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'vendor/bootstrap/js/bootstrap.bundle.min', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'vendor/chart.js/chart.umd', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'vendor/echarts/echarts.min', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'vendor/quill/quill', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'vendor/simple-datatables/simple-datatables', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'vendor/tinymce/tinymce.min', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'vendor/php-email-form/validate', 'data-turbo-track': 'reload' %>

  <%= javascript_include_tag 'js/main', 'data-turbo-track': 'reload' %>

</body>

</html>